<?xml version='1.0'?>

<robot name="second_bot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:include filename="$(find second_bot)/urdf/second_bot.gazebo" />
  <link name="robot_footprint"></link>

  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="chassis" />
  </joint>

  <material name="Yellow">
	<color rgba="1.0 1.0 0 1.0"/>
  </material>

  <material name="Red">
	<color rgba="1.0 0 0 1.0"/>
  </material>

  <material name="Green">
	<color rgba="0.0 1.0 0 1.0"/>
  </material>

  <material name="Orange">
	<color rgba="1.0 0.5 0 1.0"/>
  </material>

  <link name='chassis'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="12.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <cylinder radius="0.2" length="0.1"/>
      </geometry>
    </collision>

    <visual name='chassis_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <cylinder radius="0.2" length="0.1"/>
      </geometry>
      <material name="Red"/>
    </visual>

	<collision name='front_caster_collision'>
      <origin xyz="0.15 0 -0.03" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0</mu>
            <mu2>0</mu2>
            <slip1>1.0</slip1>
            <slip2>1.0</slip2>
          </ode>
        </friction>
      </surface>
    </collision>

    <visual name='front_caster_visual'>
      <origin xyz="0.15 0 -0.03" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </visual>

    <collision name='back_caster_collision'>
      <origin xyz="-0.15 0 -0.03" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0</mu>
            <mu2>0</mu2>
            <slip1>1.0</slip1>
            <slip2>1.0</slip2>
          </ode>
        </friction>
      </surface>
    </collision>

    <visual name='back_caster_visual'>
      <origin xyz="-0.15 0 -0.03" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </visual>


  </link>

  <link name='left_wheel'>
    <inertial>
      <mass value="3.0"/>
      <origin xyz="0 0 0" rpy="  0 1.5707 1.5707"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='left_wheel_collision'>
      <origin xyz="0 0 0" rpy="  0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.08" length="0.05"/>
      </geometry>
    </collision>

    <visual name='left_wheel_visual'>
      <origin xyz="0 0 0" rpy="  0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.08" length="0.05"/>
      </geometry>
	  <material name="Yellow"/>
    </visual>
  </link>

  <joint type="continuous" name="left_wheel_hinge">
    <origin xyz="0 0.2 0" rpy="0 0 0"/>
    <child link="left_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>

  <link name='right_wheel'>
    <inertial>
      <mass value="3.0"/>
      <origin xyz="0 0 0" rpy="  0 1.5707 1.5707"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='right_wheel_collision'>
      <origin xyz="0 0 0" rpy="  0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.08" length="0.05"/>
      </geometry>
    </collision>

    <visual name='right_wheel_visual'>
      <origin xyz="0 0 0" rpy="  0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.08" length="0.05"/>
      </geometry>
	  <material name="Yellow"/>
    </visual>
  </link>

  <joint type="continuous" name="right_wheel_hinge">
    <origin xyz="0 -0.2 0" rpy="0 0 0"/>
    <child link="right_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>

  <link name="arm1">
	  <collision>
		<origin xyz="0 0 0" rpy="0 0 0"/>
		<geometry>
		  <cylinder  radius="0.02" length="0.4"/>
		</geometry>
	  </collision>

	  <visual>
		<origin xyz="0 0 0" rpy="0 0 0"/>
		<geometry>
		  <cylinder  radius="0.02" length="0.4"/>
		</geometry>
		<material name="Orange"/>
	  </visual>

	  <inertial>
		<mass value="0.5" />
		<origin xyz="0 0 0" rpy="0 0 0"/>
		<inertia ixx="1e-4" ixy="0" ixz="0" iyy="1e-4" iyz="0" izz="1e-4" />
	  </inertial>
  </link>

  <joint type="fixed" name="arm1_joint">
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
    <child link="arm1"/>
    <parent link="chassis"/>
    <axis xyz="0 0 1" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>

  <link name="elbow1">
	  <collision>
		<origin xyz="0 0 0" rpy="0 0 0"/>
		<geometry>
		  <sphere radius="0.03"/>
		</geometry>
	  </collision>

	  <visual>
		<origin xyz="0 0 0" rpy="0 0 0"/>
		<geometry>
		  <sphere radius="0.03"/>
		</geometry>
		<material name="Orange"/>
	  </visual>

	  <inertial>
		<mass value="0.05" />
		<origin xyz="0 0 0" rpy="0 0 0"/>
		<inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
	  </inertial>
  </link>

  <joint type="revolute" name="elbow1_hinge">
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
    <child link="elbow1"/>
    <parent link="arm1"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000" lower="-0.5" upper="0.5"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>

  <link name="arm2">
	  <collision>
		<origin xyz="0 0 0" rpy="1.5707 0 1.5707"/>
		<geometry>
		  <cylinder  radius="0.02" length="0.1"/>
		</geometry>
	  </collision>

	  <visual>
		<origin xyz="0 0 0" rpy="1.5707 0 1.5707"/>
		<geometry>
		  <cylinder  radius="0.02" length="0.1"/>
		</geometry>
		<material name="Red"/>
	  </visual>

	  <inertial>
		<mass value="0.1" />
		<origin xyz="0 0 0" rpy="0 0 0"/>
		<inertia ixx="1e-5" ixy="0" ixz="0" iyy="1e-5" iyz="0" izz="1e-5" />
	  </inertial>
  </link>

  <joint type="fixed" name="arm2_joint">
    <origin xyz="0.075 0 0" rpy="0 0 0"/>
    <child link="arm2"/>
    <parent link="elbow1"/>
    <axis xyz="0.15 0.15 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>


  <link name="camera">
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <box size="0.04 0.04 0.04"/>
    </geometry>
  </collision>
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <box size="0.04 0.04 0.04"/>
    </geometry>
    <material name="Green"/>
  </visual>
  <inertial>
    <mass value="0.1" />
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
  </inertial>
  </link>

  <joint type="fixed" name="camera_joint">
    <origin xyz="0.05 0 0" rpy="0 0 0"/>
    <child link="camera"/>
    <parent link="arm2"/>
    <axis xyz="0 0 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>


  <link name="hokuyo">
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <box size="0.1 0.1 0.1"/>
    </geometry>
  </collision>
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <mesh filename="package://second_bot/meshes/hokuyo.dae"/>
    </geometry>
  </visual>
  <inertial>
    <mass value="0.1" />
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
  </inertial>
  </link>

  <joint type="fixed" name="hokuyo_joint">
    <origin xyz="0.1 0 .1" rpy="0 0 0"/>
    <child link="hokuyo"/>
    <parent link="chassis"/>
    <axis xyz="0 0 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>

</robot>

